<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-11 col-12 mx-auto">
               <div class="main_contain">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="  Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitbtn">
                    </form>
               </div>
                <div class="tempinfo">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">23 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">
                            Get output here
                        </p>
                        <div class="middle_layer" id="hiders">
                            <p id="temp"><span id="temp_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i  class="fa fa-cloud"aria-hidden='true'></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- foooter -->    
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const getcurrday = () => {
            const weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            let currtime = new Date();
            const day = document.getElementById('day');
            day.innerText  = (weekday[currtime.getDay()]);
        };

        const getcurrtime = () => {
            const cd = document.getElementById('today_data');
            const mo = ["Jan", "Feb", "Mar", "Apr", "May", "June", "July", "Aug", "Sept", "Octo", "Nove", "Decem"];
            var now = new Date();
            var month = mo[now.getMonth()];
            var day = now.getDate();
            var year = now.getFullYear();
            var hour = now.getHours();
            var mini = now.getMinutes();

            let period = "AM";
            if (hour > 11) {
                period = "PM";
                if (hour > 12) {
                    hour -= 12;
                }
            }

            if (mini < 10) { mini = "0" + mini; }
            cd.innerText = `${day} ${month}`; 

        }

        getcurrday();
        getcurrtime();

    </script>
</body>

</html>